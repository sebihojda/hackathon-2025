{% extends 'layout.twig' %}
{% block title %}Add Expense{% endblock %}
{% block content %}
    <h1 class="text-2xl font-bold mb-4">Add Expense</h1>

    {% if errors %}
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            {% for error in errors %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}

    <section class="mb-8">
        <form action="/expenses" method="POST" class="max-w-sm mx-auto">
            <div class="mb-4 flex items-center">
                <label for="date" class="w-24 text-gray-300 font-bold">Date:</label>
                <input type="date" id="date" name="date" required value="{{ old.date ?? 'now'|date('Y-m-d') }}"
                       class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-4 flex items-center">
                <label for="category" class="w-24 text-gray-300 font-bold">Category:</label>
                <select id="category" name="category" required
                        class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="">Select a category</option>
                        {% for category in categories %}
                            <option value="{{ category }}" {% if old.category == category %}selected{% endif %}>{{ category|title }}</option>
                        {% endfor %}
                </select>
            </div>
            <div class="mb-4 flex items-center">
                <label for="amount" class="w-24 text-gray-300 font-bold">Amount:</label>
                <input type="number" id="amount" name="amount" step="0.01" required value="{{ old.amount ?? '' }}"
                       class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-6 flex items-start">
                <label for="description" class="w-24 text-gray-300 font-bold mt-2">Description:</label>
                <textarea id="description" name="description" rows="2"
                          class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">{{ old.description ?? '' }}</textarea>
            </div>
            <div class="flex justify-end">
                <button type="submit"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create
                </button>
            </div>
        </form>
    </section>
{% endblock %}