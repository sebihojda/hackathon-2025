{% extends 'layout.twig' %}
{% block title %}Dashboard{% endblock %}
{% block content %}
    <h1 class="text-2xl font-bold mb-4">Dashboard</h1>

    <section class="mb-8">
        <h2 class="text-xl font-bold mb-4">Overspending Alerts</h2>
        {# TODO: you have below examples for both success and failure messages #}
        {# TODO: customize the markup below for the actual alerts #}
        {% for alert in alerts %}
            {% if alert.type == 'success' %}
            {#<div class="bg-green-900/50 border border-green-700 rounded-lg p-4 mb-4">
                <p class="text-green-300">✅ Looking good! You're within budget for this month.</p>
            </div>
            <div class="bg-red-900/50 border border-red-700 rounded-lg p-4">
                <p class="text-red-300">⚠ Groceries budget exceeded by 25.50 €</p>
            </div>#}
                <div class="bg-green-900/50 border border-green-700 rounded-lg p-4 mb-4">
                    <p class="text-green-300">{{ alert.message }}</p>
                </div>
            {% else %}
                <div class="bg-red-900/50 border border-red-700 rounded-lg p-4 mb-4">
                    <p class="text-red-300">{{ alert.message }}</p>
                </div>
            {% endif %}
        {% endfor %}
    </section>

    <section>
        <h2 class="text-xl font-bold mb-4">Monthly Expenses Summary</h2>
        <form action="" method="get" class="mb-4 flex gap-4 items-center">
            {# TODO: remove mock data below, pass actual years having expenses from the controller #}
            <select name="year" class="bg-gray-700 text-gray-100 rounded px-3 py-2">
                {#<option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015" selected>2015</option>#}
                {% for year in availableYears %}
                    <option value="{{ year }}" {% if year == selectedYear %}selected{% endif %}>{{ year }}</option>
                {% endfor %}
            </select>

            {# TODO: add the "selected" attribute to the current displayed month #}
            <select name="month" class="bg-gray-700 text-gray-100 rounded px-3 py-2">
                {#<option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5" selected>5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>#}
                {% for month in 1..12 %}
                    <option value="{{ month }}" {% if month == selectedMonth %}selected{% endif %}>{{ month }}</option>
                {% endfor %}
            </select>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Show summary
            </button>
        </form>

        <div class="mt-6">
            <h3 class="text-lg font-bold mb-2">Total expenditure</h3>
            <div class="bg-gray-800 rounded-lg p-6">
                {#<div class="text-4xl font-bold text-green-400 mb-2">€2,459.32</div>
                <div class="text-gray-400">for month 5 of year 2025</div>#}
                <div class="text-4xl font-bold text-green-400 mb-2">€{{ "%.2f"|format(totalForMonth) }}</div>
                <div class="text-gray-400">for month {{ selectedMonth }} of year {{ selectedYear }}</div>
            </div>
        </div>

        {% set colors = ['orange','lime','blue','amber','green','yellow','violet','emerald','purple','teal','fuchsia'] %}
        {# TODO: replace the static data below with actual per-category totals passed from the controller #}
        {#{% set totalsForCategories = {
            'Groceries': {'value': 100, 'percentage': 10},
            'Entertainment': {'value': 200, 'percentage': 20},
            'Transport': {'value': 300, 'percentage': 30},
            'Utilities': {'value': 400, 'percentage': 40}
        } %}#}

        {% if totalsForCategories|length > 0 %}
            <div class="mt-6">
                {#<h3 class="text-lg font-bold mb-2">Per-category <strong>totals</strong> for month 5 of 2025</h3>#}
                <h3 class="text-lg font-bold mb-2">Per-category <strong>totals</strong> for month {{ selectedMonth }} of {{ selectedYear }}</h3>
                <div class="space-y-4 mb-2">
                    {% for category,data in totalsForCategories %}
                        <div class="relative">
                            <div class="bg-{{ colors[loop.index0 % colors|length] }}-600 h-8 rounded"
                                 style="width: {{ data.percentage }}%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">{{ category }}: {{ data.value }} €</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# TODO: follow the example above and replicate the markup and twig logic for the averages below #}

        {% if averagesForCategories|length > 0 %}
            <div class="mt-6">
                {#<h3 class="text-lg font-bold mb-2">Per-category <strong>averages</strong> for month 5 of 2025</h3>#}
                <h3 class="text-lg font-bold mb-2">Per-category <strong>averages</strong> for month {{ selectedMonth }} of {{ selectedYear }}</h3>
                <div class="space-y-4 mb-2">
                    {% for category, data in averagesForCategories %}
                       {# <div class="relative">
                            <div class="bg-blue-600 h-8 rounded" style="width: 80%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">Groceries: 50.10 €</span>
                            </div>
                        </div>
                        <div class="relative">
                            <div class="bg-green-600 h-8 rounded" style="width: 60%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">Utilities: 40.20 €</span>
                            </div>
                        </div>
                        <div class="relative">
                            <div class="bg-purple-600 h-8 rounded" style="width: 45%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">Entertainment: 25.90 €</span>
                            </div>
                        </div>
                        <div class="relative">
                            <div class="bg-yellow-600 h-8 rounded" style="width: 35%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">Transport: 75.50 €</span>
                            </div>
                        </div>#}
                        <div class="relative">
                            <div class="bg-{{ colors[loop.index0 % colors|length] }}-600 h-8 rounded"
                                 style="width: {{ data.percentage }}%">
                                <span class="absolute inset-0 flex items-center justify-start pl-4 text-white font-bold">{{ category }}: €{{ "%.2f"|format(data.value) }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if totalsForCategories|length == 0 %}
            <div class="mt-6 bg-gray-800 rounded-lg p-6 text-center">
                <p class="text-gray-400">No expenses found for the selected month.</p>
            </div>
        {% endif %}

    </section>

{% endblock %}